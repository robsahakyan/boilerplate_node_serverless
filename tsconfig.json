{
  "compilerOptions": {
     "target": "es2019",
     "module": "commonjs",
     "rootDir": "./",
     "resolveJsonModule": true,
     "outDir": "./dist",
     "esModuleInterop": true,
     "forceConsistentCasingInFileNames": true,
     "strict": true,
     "noImplicitAny": true,
     "skipLibCheck": true,
     "experimentalDecorators": true,
     "strictPropertyInitialization": false
  },
  "exclude": [
    "node_modules/*"
  ]
}